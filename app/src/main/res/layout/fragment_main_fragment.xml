<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="296dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/advent_pro"
        android:text="StrateGoo"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterUsername"
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_marginTop="92dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameTitle" />

    <Button
        android:id="@+id/settings"
        android:layout_width="237dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/OliveDrab"
        android:clickable="true"
        android:text="settings editor"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:icon="@android:drawable/ic_menu_preferences"
        app:iconPadding="8dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/enterUsername" />

    <Button
        android:id="@+id/enterGame"
        android:layout_width="186dp"
        android:layout_height="52dp"
        android:layout_marginTop="392dp"
        android:autoText="false"
        android:backgroundTint="@color/DeepRed"
        android:text="enter Game"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
