<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/advent_pro"
        android:text="StrateGoo"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterUsername"
        android:layout_width="241dp"
        android:layout_height="53dp"
        android:layout_marginTop="92dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameTitle" />

    <Button
        android:id="@+id/settings"
        android:layout_width="237dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/AshGray"
        android:clickable="true"
        android:text="settings editor"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:icon="@android:drawable/ic_menu_preferences"
        app:iconPadding="8dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/enterUsername" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="186dp"
        android:layout_height="52dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="68dp"
        android:autoText="false"
        android:backgroundTint="@color/DeepRed"
        android:text="START Game"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.stratego_app.UI.LobbyFragment"
        android:layout_width="412dp"
        android:layout_height="174dp"
        android:layout_marginBottom="174dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-1dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="210dp"
        android:backgroundTint="@color/DarkSlateGray"
        android:text="enter"
        app:layout_constraintStart_toEndOf="@+id/enterUsername"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
