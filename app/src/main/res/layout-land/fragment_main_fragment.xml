<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board1">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="731dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="#B3C5EDF1"
        android:fontFamily="@font/advent_pro_medium"
        android:text="@string/StrateGoo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterUsername"
        android:layout_width="241dp"
        android:layout_height="53dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="52dp"
        android:autofillHints=""
        android:background="@android:color/white"
        android:ems="10"
        android:foregroundTint="@color/AshGray"
        android:hint="@string/username"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/fragmentContainerView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="594dp"
        android:backgroundTint="@color/DarkSlateGray"
        android:text="@string/enterUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings"
        android:layout_width="237dp"
        android:layout_height="53dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="330dp"
        android:layout_marginBottom="29dp"
        android:backgroundTint="@color/AshGray"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/settingsEditor"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:icon="@android:drawable/ic_menu_preferences"
        app:iconPadding="8dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="182dp"
        android:layout_height="89dp"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/DeepRed"
        android:text="@string/startGame"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.stratego_app.ui.LobbyFragment"
        android:layout_width="359dp"
        android:layout_height="141dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="120dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameTitle"
        app:layout_constraintVertical_bias="0.642" />


</androidx.constraintlayout.widget.ConstraintLayout>
