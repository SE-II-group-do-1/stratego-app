<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/leaveGameButton"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="616dp"
        android:layout_marginTop="327dp"
        android:backgroundTint="@color/DeepRed"
        android:text="@string/leave_game" />

    <LinearLayout
        android:id="@+id/linearTimeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/time_background_gameboard"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelTimePlayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_playing"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/timeCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/gameTime"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>


    <TextView
        android:id="@+id/gameEvents"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearTimeContainer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/frame_game_events"
        android:text="Player kat has capture marshall."
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/gameStats"
        android:layout_width="306dp"
        android:layout_height="187dp"
        android:layout_below="@id/gameEvents"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/frame_game_events"
        android:text="1 x Marshall"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="italic" />

    <com.example.stratego_app.ui.GameBoardView
        android:id="@+id/gameBoardView"
        android:layout_width="364dp"
        android:layout_height="370dp"
        android:layout_below="@id/linearTimeContainer"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp" />


</RelativeLayout>
